<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.worldhistoryp.Home"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/bgmenu">

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/star"
                android:layout_marginBottom="1dp"/>
            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/menu"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearLesson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ICMenuLesson"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/circlebg"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/iclesson" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="LESSON"
                android:textStyle="bold"
                android:textColor="@color/textMenu"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ICMenuTest"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebgtwo"
                android:padding="10dp"
                android:src="@drawable/ictest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TEST"
                android:textStyle="bold"
                android:textColor="@color/textMenu"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ICMenuGame"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebgthree"
                android:padding="10dp"
                android:src="@drawable/icrocket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="GAME"
                android:textStyle="bold"
                android:textColor="@color/textMenu"/>
        </LinearLayout>
    </LinearLayout>


    </LinearLayout>



